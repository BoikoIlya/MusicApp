<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="5dp"
    android:foreground="?attr/selectableItemBackground"
    >



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="10dp"
        >

        <ImageView
            android:background="@color/white"
            android:id="@+id/trackImg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/song_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Space Vandals"
        android:textColor="@color/black"
        android:textSize="@dimen/body1"
        android:textStyle="bold"
        app:flow_horizontalBias="0.5"
        app:layout_constraintBottom_toTopOf="@id/authorTv"
        app:layout_constraintEnd_toStartOf="@+id/downloaded_icon"
        app:layout_constraintStart_toEndOf="@+id/cardView"

        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <TextView
        android:id="@+id/authorTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Moderatordsffffffffffffffffffffffffffffffff"
        android:textColor="@color/gray"
        android:textSize="@dimen/body1"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/song_name_tv"
        app:layout_constraintStart_toEndOf="@id/trackDurationTv"
        app:layout_constraintTop_toBottomOf="@id/song_name_tv" />

    <TextView
        android:id="@+id/trackDurationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:34 Â· "
        android:textColor="@color/gray"
        android:textSize="@dimen/body2"
        app:layout_constraintBottom_toBottomOf="@+id/authorTv"
        app:layout_constraintEnd_toStartOf="@+id/authorTv"
        app:layout_constraintStart_toStartOf="@+id/song_name_tv"
        app:layout_constraintTop_toTopOf="@+id/authorTv" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:id="@+id/downloaded_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/download"
        android:tint="@color/green"
        android:clickable="false"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/song_name_tv"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:visibility="gone"
        android:layout_marginEnd="10dp"
        android:id="@+id/add_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/plus"
        android:tint="@color/gray"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/downloaded_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>