<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:visibility="gone"
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/left_chevron"
        app:layout_constraintEnd_toStartOf="@id/titleTv"
        app:layout_constraintBottom_toBottomOf="@+id/titleTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleTv"
        android:tint="@color/gray" />

    <TextView
        android:id="@+id/titleTv"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/h3"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="@string/notifications"
        />


    <com.simform.refresh.SSPullToRefreshLayout
        android:id="@+id/pull_to_refresh"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notificationsRcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="140dp"
            tools:listitem="@layout/notification_item"
            />
    </com.simform.refresh.SSPullToRefreshLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/notification_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/notification"
        android:tint="@color/orange"
        />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:text="No notifications"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/h3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/noNotificationsMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_img"
        />

    <com.kamancho.melisma.app.core.ScrollUpRecyclerButton
        android:id="@+id/scrollUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/up_chevron"
        app:tint="@color/orange"
        app:shapeAppearance="@style/ThemeOverlay.Material3.FloatingActionButton.Secondary"
        android:layout_marginBottom="160dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>