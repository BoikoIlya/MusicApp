<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".app.main.presentation.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

  <androidx.fragment.app.FragmentContainerView
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:id="@+id/fragment_container"
      android:name="androidx.navigation.fragment.NavHostFragment"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:defaultNavHost="true"
      app:navGraph="@navigation/main_nav_graph" />


  <androidx.constraintlayout.widget.ConstraintLayout
      android:paddingHorizontal="15dp"
      android:clickable="true"
      android:id="@+id/bottomPlayerBar"
      android:visibility="visible"
      android:layout_width="0dp"
      android:layout_height="140dp"
      android:background="@drawable/bottom_song_shape"
      app:layout_constraintBottom_toBottomOf="parent"

      app:layout_constraintEnd_toEndOf="@+id/bottom_nav_view"
      app:layout_constraintStart_toStartOf="@+id/bottom_nav_view"
    >

<!--      app:layout_constraintEnd_toEndOf="parent"-->
<!--      app:layout_constraintStart_toStartOf="parent"-->
      <androidx.cardview.widget.CardView
          android:layout_marginStart="10dp"
          android:layout_marginTop="15dp"
          android:id="@+id/cardView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:cardCornerRadius="12dp"
          >

      <ImageView
          android:background="@color/white"
          android:id="@+id/trackImg"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@color/white"
          />
      </androidx.cardview.widget.CardView>

      <TextView
          android:id="@+id/song_name_tv"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:ellipsize="end"
          android:maxLines="1"
          android:paddingHorizontal="15dp"
          android:text="Space Vandals"
          android:textColor="@color/white"
          android:textSize="@dimen/h3"
          android:textStyle="bold"
          app:layout_constraintEnd_toStartOf="@id/bottom_previous_btn"
          app:layout_constraintHorizontal_bias="0.15"
          app:layout_constraintStart_toEndOf="@+id/cardView"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/song_author_name"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="1"
          android:paddingHorizontal="15dp"
          android:text="Moderator"
          android:textColor="@color/gray"
          android:textSize="@dimen/body1"
          app:layout_constraintEnd_toEndOf="@+id/song_name_tv"
          app:layout_constraintStart_toStartOf="@+id/song_name_tv"
          app:layout_constraintTop_toBottomOf="@id/song_name_tv" />

      <ImageButton
          android:id="@+id/bottom_previous_btn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:background="@drawable/previouss"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="@+id/song_author_name"
          app:layout_constraintEnd_toStartOf="@id/bottom_play_btn"
          app:layout_constraintVertical_bias="0.65"
          android:layout_marginEnd="12dp"
          />

    <ToggleButton
        android:textOff=""
        android:textOn=""
        android:id="@+id/bottom_play_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/play_btn_selector"
        android:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="@+id/song_author_name"
        app:layout_constraintEnd_toStartOf="@id/bottom_next_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:layout_marginEnd="10dp"
        />

      <ImageButton
          android:id="@+id/bottom_next_btn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:background="@drawable/nextt"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="@+id/song_author_name"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintVertical_bias="0.65"
          android:layout_marginEnd="12dp"
          />

  </androidx.constraintlayout.widget.ConstraintLayout>


  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottom_nav_view"
      android:layout_width="0dp"
      android:layout_height="60dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:background="@drawable/bottom_nav_bg"
      app:itemIconTint="@drawable/bottom_nav_selector"
      android:backgroundTint="@color/orange"
      app:itemActiveIndicatorStyle="@color/black"
      app:menu="@menu/bottom_nav"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>
