<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textView5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/left_chevron"
        android:tint="@color/gray"
        android:id="@+id/back_btn_queue"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        />

    <TextView
        android:paddingStart="20dp"
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Queue:"
        android:textColor="@color/black"
        android:textSize="@dimen/h3"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/back_btn_queue"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="10dp"
        />

        <ImageButton
            android:layout_marginEnd="20dp"
            android:id="@+id/trackPosition"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/tone"
            android:tint="@color/gray"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />


    <com.example.musicapp.app.core.ScrollUpButton
        android:id="@+id/scrollUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/black"
        android:src="@drawable/up_chevron"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="20dp"
        app:shapeAppearance="@style/ThemeOverlay.Material3.FloatingActionButton.Secondary"
        app:tint="@color/orange" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/queueRcv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:clipToPadding="false"
        tools:listitem="@layout/track_item"
        android:paddingBottom="40dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>