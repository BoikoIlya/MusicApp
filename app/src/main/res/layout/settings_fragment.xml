        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/flaticon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/telegram">

            <ImageView
                android:id="@+id/flaticonImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/world_wide_web"
                app:layout_constraintBottom_toBottomOf="@id/flaticonDescr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/flaticonTitle" />

            <TextView
                android:id="@+id/flaticonTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawablePadding="15dp"
                android:text="@string/icons_are_taken_from_flaticon_website"
                android:textColor="@color/black"
                android:textSize="@dimen/body1"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/flaticonImg"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/flaticonDescr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="15dp"
                android:text="@string/click_to_go_to_website"
                android:textColor="@color/gray"
                android:textSize="@dimen/body2"
                app:layout_constraintEnd_toEndOf="@+id/flaticonTitle"
                app:layout_constraintStart_toStartOf="@+id/flaticonTitle"
                app:layout_constraintTop_toBottomOf="@id/flaticonTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/freepic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flaticon">

            <ImageView
                android:id="@+id/freepicImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/world_wide_web"
                app:layout_constraintBottom_toBottomOf="@id/freepicDescr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/freepicTitle" />

            <TextView
                android:id="@+id/freepicTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawablePadding="15dp"
                android:text="@string/artworks_are_taken_from_freepik_website"
                android:textColor="@color/black"
                android:textSize="@dimen/body1"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/freepicImg"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/freepicDescr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="15dp"
                android:text="@string/click_to_go_to_website"
                android:textColor="@color/gray"
                android:textSize="@dimen/body2"
                app:layout_constraintEnd_toEndOf="@+id/freepicTitle"
                app:layout_constraintStart_toStartOf="@+id/freepicTitle"
                app:layout_constraintTop_toBottomOf="@id/freepicTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/logoutBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/exit"
            android:drawablePadding="20dp"
            android:drawableTint="@color/red"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textSize="@dimen/body1"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/freepic" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>